<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', {page: 'userHistory'}) %>
    <div class="bg-blue-600 py-10">
        <div class="container mx-auto flex items-center space-x-4">
          <!-- User Info -->
          <div>
            <h1 class="text-2xl font-bold text-white"><%= session.user.userName %></h1>
            <p class="text-white"><%= session.user.email %></p>
          </div>
        </div>
      </div>
      <div class="container mx-auto my-10">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Login Date/Time
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Client Information
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% session.user.loginHistory.forEach(function(history) { %>
                <tr class="even:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= new Date(history.dateTime).toLocaleString() %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= history.userAgent %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>            
</body>
</html>

